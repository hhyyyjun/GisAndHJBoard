<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lee.mapstudy.boardDao.ReplyDao">

<select id="checkRseq" resultType="String">
	SELECT TB_REPLY_SEQ.NEXTVAL FROM DUAL
</select>

<insert id="insertReply" parameterType="CustomMap">
	INSERT
		INTO
		TB_REPLY(
			 RNUM
			,BNUM
			,RCONTENT
			,MID
		)
		VALUES(
			 #{rnum}
			,#{bnum}
			,#{rcontent}
			,#{mid}
		)
</insert>

<select id="selectReply" parameterType="CustomMap" resultType="CustomMap">
SELECT 
	 R.BNUM
	,R.RNUM 
	,R.RCONTENT
	,R.MID
	,R.RDATE
	,M.MNICK
FROM 
	 TB_BOARD B
	,TB_MEMBER M
	,TB_REPLY R
WHERE 1 = 1
AND B.BNUM = R.BNUM 
AND M.MID = R.MID 
AND B.BNUM = #{bnum}
ORDER BY RNUM DESC
</select>

</mapper>